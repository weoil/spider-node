{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": false,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "lib": ["es2015", "es2016"]
  },
  "include": ["./src/*", "./src/**/*"],
  "exclude": ["node_modules", "**/node_modules/*"],
  "baseUrl": ".",
  "paths": {
    "*": ["node_modules/*", "src/types/*"]
  }
}
